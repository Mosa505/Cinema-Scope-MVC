@model IEnumerable<Movie>
@{
    ViewData["Title"] = "All Movie";
}

<h2>
    <i class="bi bi-film"></i>
    Movie

</h2>
<hr />

<a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Movie</a>

<div class="mt-4">
    @if (!Model.Any())
    {

        <div class="alert alert-primary" role="alert">
            <i class="bi bi-exclamation-triangle"></i> No Movies Found !
        </div>

    }
    else
    {
        <div class="row">
            @foreach (var Item in Model)
            {

                <div class="col-12">
                    <div class="card mb-3" style="max-width: 900px;">
                        <div class="row g-0">
                            <div class="col-md-2 poster" style="background-image:url(data:image\/*;base64,@Convert.ToBase64String(Item.Poster))"></div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">

                                    <div>
                                        <h5 class="card-title">@Item.Titel (@Item.Year)</h5>
                                        <p class="card-text text-justify">@(Item.StoryLine.Length > 500 ? $"{Item.StoryLine.Substring(0, 500)}..." : Item.StoryLine)</p>
                                    </div>
                                    <div class="d-flex justify-content-between ">
                                        <p class="card-text mb-2 mb-1">
                                            <i class="bi bi-star-fill text-warning"></i>
                                            <small class="text-muted">@Item.Rate.ToString("0.0")</small>
                                        </p>

                                        <div>

                                            <a asp-action="Details" asp-route-id="@Item.id" class="btn btn-outline-success">
                                                <i class="bi bi-camera-reels"></i>
                                                Details
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@Item.id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                                Edit
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@Item.id" class="btn btn-outline-danger">
                                                <i class="bi bi-trash-fill"></i>
                                                Delete
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            }
        </div>
    }
</div>

