@model IEnumerable<Movie>
@{
    ViewData["Title"] = "All Movie";
}

<h2>
    <i class="bi bi-film"></i>
    Movie

</h2>
<hr />

<div class="mt-4">
    @if (!Model.Any())
    {

        <div class="alert alert-primary" role="alert">
            <i class="bi bi-exclamation-triangle"></i> No Movies Found !
        </div>

    }
    else
    {
        foreach (var Item in Model)
        {

            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@Item.Poster" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>

        }
    }
</div>
<a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Movie</a>

