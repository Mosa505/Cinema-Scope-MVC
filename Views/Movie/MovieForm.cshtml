@model MovieFormViewModel
@{
    ViewData["Title"] = "Movie Form";

    SelectList GenreList = new SelectList(Model.Genres, "Id", "Name");
}

<h2>@(Model.Id > 0 ? "Edit Movie" : "New Movie")</h2>
<hr />
<section class="row justify-content-between">
    <div class="col-md-4">

        <form method="post" asp-action=@(Model.Id> 0 ? "Edit" : "Create") enctype="multipart/form-data">
            <input  type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Titel">Title</label>
                <input asp-for="Titel" class="form-control" maxlength="250" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="GenreId">Genre</label>
                <select class="form-control" asp-for="GenreId" asp-items="GenreList">
                    <option value=""> choose Genre.... </option>
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group w-50">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" class="form-control" value="@(Model.Id>0 ? Model.Year : String.Empty )" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group w-50">
                <label asp-for="Rate">Rate</label>
                <input asp-for="Rate" class="form-control" value="@(Model.Id > 0 ? Model.Rate : String.Empty)" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <br />
           
            
            <div class="form-group">
                <label asp-for="StoryLine">Story Line</label>
                <textarea asp-for="StoryLine" class="form-control" rows="4" maxlength="2500" placeholder="Enter Story Line"></textarea>
                <span asp-validation-for="StoryLine" class="text-danger"></span>
            </div>
            <br />

            <div class="mb-3">
                <label asp-for="Poster" class="form-label">Select Poster</label>
                <input asp-for="Poster" type="file" class="form-control" accept=".png,.jpg" />
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>

            <br />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i>
                Save
            </button>
            <a asp-Action="Index" class="btn btn-danger">
                <i class="bi bi-x"></i>
                Cancel
            </a>

        </form>

    </div>
    <div id="poster-container" class="@(Model.Id>0?string.Empty:"d-non") col-md-4">
        <img src="@(Model.Id > 0 ? $"data:image/*;base64,{Convert.ToBase64String(Model.Poster)}" : string.Empty)" alt="" class="img-thumbnail">
    </div>


</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#Poster').on('change', function () {
                var selectedFile = $(this).val().split('\\').pop();
                $(this).siblings('label').text(selectedFile);

                var posterContainer = $('#poster-container');
                var image = window.URL.createObjectURL(this.files[0]);

                posterContainer.removeClass('d-none');
                posterContainer.find('img').attr('src', image);
            });

            $('#Year').datepicker({
                format: 'yyyy',
                viewMode: 'years',
                minViewMode: 'years',
                autoclose: true,
                startDate: new Date('1950-01-01'),
                endDate: new Date()
            });
        });
    </script>
}

